<%= form_for @cheque do |f| %>
  <% if @cheque.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cheque.errors.count, "error") %> prohibited this cheque from being saved:</h2>

      <ul>
      <% @cheque.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :payment_date %>
  <div class="input-append date datepicker" data-date-format="dd-mm-yyyy">
    <%= f.text_field :payment_date, 'data-behaviour' => 'datepicker' %>
    <span class="add-on"><i class="icon-th"></i></span>
  </div>
  <%= f.label :recipient %>
  <%= f.text_field :recipient, id: "recipient-field" %>
  <%= f.label :value %>
  <div class="input-prepend">
    <span class="add-on">$</span>
    <%= f.text_field :value %>
  </div>
  <%= f.submit %>
  <script type="text/javascript">
    $('.datepicker').datepicker({
      autoclose: true
    });
  </script>
<% end %>
